/*
 * EXPECTED_RESULT: $CYCLE % 10 == 0
 */
public def T(initial, zero, decay) {
	rep(v <- initial) {
		min(initial, max(zero, decay.apply(v)))
	}
}

public def cyclicTimer(length, decay) {
	rep(left <- length) {
		if(left == 0) {
			length
		} else {
			T(length - 1, 0, (t) -> {t - decay})
		}
	} == length
}

cyclicTimer(10, 1)
