/**
 * EXPECTED_RESULT: if(($CYCLE+1)%2==0) {"bar"} else {"Here I'm!"}
 */
import protelis:state:time

public def iff(c, t, el) {
	let res = alignedMap(
		nbr([[c, "foo"]]),
		(key, field) -> { key }, // cond
		(key, field) -> { t.apply(field) },
		"foo" 
	);
	if(res == []) { el.apply() } else { res.get(0).get(1) }
}

iff(cyclicTimer(1), 
	(field) -> { "Here I'm!" },
	() -> { "bar" }
)

